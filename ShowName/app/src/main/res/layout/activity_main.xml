<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jsco_pc.showname.MainActivity">

    <TextView
            android:text="@string/textView"
            android:layout_width="147dp"
            android:layout_height="0dp"
            android:id="@+id/textView" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="77dp" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/nameId"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameId"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/showId"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/showId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showId"
            app:layout_constraintTop_toBottomOf="@+id/nameId" android:layout_marginBottom="53dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/resultId"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:id="@+id/resultId" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="11dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/showId"
            android:layout_marginBottom="149dp" app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>