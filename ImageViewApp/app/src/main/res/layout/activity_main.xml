<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="311dp"
            android:layout_height="214dp" app:srcCompat="@mipmap/hair"
            android:id="@+id/hairImgView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.506"/>
    <ImageView
            android:layout_width="311dp"
            android:layout_height="245dp" app:srcCompat="@mipmap/beard"
            android:id="@+id/beardImageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hairImgView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>